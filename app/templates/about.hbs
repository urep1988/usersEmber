<div class="container" style="background-color: #B0C4DE; height:100vh;">
	<h1 align="center">{{model.name}} information</h1>
	<div class="col-sm-4">
		<p><img align="center" src={{model.photo}} alt={{model.name}} width="300px"></p>
		<h3>{{#link-to "index"}}All Users{{/link-to}}</h3>
	</div>
	<div class="col-sm-7">
		<table class="table table-hover">
			<tbody>
				<tr>
					<td>Age:</td>
					<td>{{model.age}}</td>
				</tr>
				<tr>
					<td>Sex:</td>
					<td>{{model.sex}}</td>
				</tr>
				<tr>
					<td>email:</td>
					<td>{{model.email}}</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>